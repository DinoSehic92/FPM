<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Avalon.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Avalon.Views"
        mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="800"
		MinWidth="1400"
		MinHeight="800"
        x:Class="Avalon.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        WindowStartupLocation="CenterScreen"
        ExtendClientAreaToDecorationsHint="True"
        Title="Avalon">


	<Window.Styles>
		<Style Selector="DataGridRow.Yellow">
			<Setter Property="Background" Value="Yellow"/>
			<Setter Property="Foreground" Value="Black"/>
		</Style>
		<Style Selector="DataGridRow.Orange">
			<Setter Property="Background" Value="Orange"/>
		</Style>
		<Style Selector="DataGridRow.Brown">
			<Setter Property="Background" Value="SaddleBrown"/>
		</Style>
		<Style Selector="DataGridRow.Green">
			<Setter Property="Background" Value="DarkGreen"/>
		</Style>
		<Style Selector="DataGridRow.Blue">
			<Setter Property="Background" Value="DarkBlue"/>
		</Style>
		<Style Selector="DataGridRow.Red">
			<Setter Property="Background" Value="Red"/>
		</Style>
		<Style Selector="DataGridRow.Magenta">
			<Setter Property="Background" Value="Purple"/>
		</Style>
	</Window.Styles>
	<views:MainView />


	
</Window>
