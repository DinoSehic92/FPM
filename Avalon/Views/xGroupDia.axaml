<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="180" d:DesignHeight="300"
		MinWidth="190"
		MinHeight="110"
		MaxWidth="190"
		MaxHeight="110"

        x:Class="Avalon.Views.xGroupDia"
        Title="xGroupDia"
		xmlns:vm="clr-namespace:Avalon.ViewModels"
		CanResize="False"
		WindowStartupLocation="CenterScreen"
        ExtendClientAreaToDecorationsHint="True"
		x:DataType="vm:MainViewModel">

	<Border BorderBrush="Gray" BorderThickness="1">
		<StackPanel Orientation="Vertical" Spacing="10" Margin="0 20 0 0" HorizontalAlignment="Center" VerticalAlignment="Center">
			<Label Content="Set Project Group" FontWeight="Bold" HorizontalContentAlignment="Center"/>
			<TextBox Name="ProjectGroupInput" HorizontalContentAlignment="Center"  Width="160" />
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
				<Button Name="GroupAccept" HotKey="Enter" Content="Accept" Width="70" BorderBrush="Gray" Click="OnGroupProject"/>
			</StackPanel>
		</StackPanel>
	</Border>
    
</Window>
